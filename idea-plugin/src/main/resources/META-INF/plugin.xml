<idea-plugin version="2">
  <id>ws.epigraph.ideaplugin.schema</id>
  <name>Epigraph</name>
  <version>1.0</version>
  <vendor email="support@sumologic.com" url="http://www.sumologic.com">Sumo Logic</vendor>

  <description><![CDATA[
      Epigraph framework support
    ]]></description>

  <depends optional="true" config-file="plugin-uml.xml">com.intellij.diagram</depends>

  <change-notes><![CDATA[
      Initial release.
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <!--<idea-version since-build="145.0"/>-->
  <!-- This gets automatically inserted by the intellij gradle plugin based on version number from gradle.properties -->

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to source different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="ws.epigraph.ideaplugin.edl.SchemaFileTypeFactory"/>
    <internalFileTemplate name="Epigraph Schema"/>
    <stubElementTypeHolder class="ws.epigraph.edl.parser.psi.stubs.SchemaStubElementTypes"/>

    <!-- indices -->
    <stubIndex implementation="ws.epigraph.ideaplugin.edl.index.SchemaShortTypeNameIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.edl.index.SchemaFullTypeNameIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.edl.index.SchemaTypesByNamespaceIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.edl.index.SchemaNamespaceByNameIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.edl.index.SchemaSupplementBySourceIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.edl.index.SchemaSupplementBySupplementedIndex"/>

    <!-- remove file extension in editor tabs -->
    <editorTabTitleProvider
        implementation="ws.epigraph.ideaplugin.edl.presentation.SchemaEditorTabTitleProvider"/>

    <!-- change icon if schema file is not under the source root -->
    <fileIconPatcher implementation="ws.epigraph.ideaplugin.edl.presentation.SchemaFileIconPatcher"/>

    <lang.syntaxHighlighterFactory language="epigraph_schema"
                                   implementationClass="ws.epigraph.ideaplugin.edl.highlighting.SchemaSyntaxHighlighterFactory"/>
    <lang.parserDefinition language="epigraph_schema"
                           implementationClass="ws.epigraph.edl.parser.SchemaParserDefinition"/>

    <completion.contributor language="epigraph_schema"
                            implementationClass="ws.epigraph.ideaplugin.edl.features.completion.SchemaCompletionContributor"/>

    <lang.formatter language="epigraph_schema"
                    implementationClass="ws.epigraph.ideaplugin.edl.formatting.SchemaFormattingModelBuilder"/>
    <langCodeStyleSettingsProvider
        implementation="ws.epigraph.ideaplugin.edl.formatting.codeStyle.SchemaLanguageCodeStyleSettingsProvider"/>
    <codeStyleSettingsProvider
        implementation="ws.epigraph.ideaplugin.edl.formatting.codeStyle.SchemaCodeStyleSettingsProvider"/>

    <lang.findUsagesProvider language="epigraph_schema"
                             implementationClass="ws.epigraph.ideaplugin.edl.features.usages.SchemaFindUsagesProvider"/>
    <elementDescriptionProvider
        implementation="ws.epigraph.ideaplugin.edl.features.usages.SchemaElementDescriptionProvider"/>
    <usageTypeProvider
        implementation="ws.epigraph.ideaplugin.edl.features.usages.SchemaUsageTypeProvider"/>

    <lang.namesValidator language="epigraph_schema"
                         implementationClass="ws.epigraph.ideaplugin.edl.features.SchemaNamesValidator"/>

    <lang.braceMatcher language="epigraph_schema"
                       implementationClass="ws.epigraph.ideaplugin.edl.features.SchemaBraceMatcher"/>
    <lang.foldingBuilder language="epigraph_schema"
                         implementationClass="ws.epigraph.ideaplugin.edl.features.SchemaFoldingBuilder"/>
    <lang.commenter language="epigraph_schema"
                    implementationClass="ws.epigraph.ideaplugin.edl.features.SchemaCommenter"/>
    <lang.psiStructureViewFactory language="epigraph_schema"
                                  implementationClass="ws.epigraph.ideaplugin.edl.features.structureview.SchemaStructureViewFactory"/>
    <statementUpDownMover implementation="ws.epigraph.ideaplugin.edl.features.SchemaLineMover"/>
    <quoteHandler fileType="epigraph_schema"
                  className="ws.epigraph.ideaplugin.edl.features.SchemaQuoteHandler"/>
    <gotoClassContributor
        implementation="ws.epigraph.ideaplugin.edl.features.navigation.GotoTypeContributor"/>
    <!--TODO <gotoSymbolContributor implementation=""-->
    <codeInsight.lineMarkerProvider
        language="epigraph_schema"
        implementationClass="ws.epigraph.ideaplugin.edl.features.hierarchy.SchemaLineMarkerProvider"/>

    <typeHierarchyProvider language="epigraph_schema"
                           implementationClass="ws.epigraph.ideaplugin.edl.features.hierarchy.SchemaHierarchyProvider"/>


    <!-- annotator -->
    <annotator language="epigraph_schema"
               implementationClass="ws.epigraph.ideaplugin.edl.highlighting.SchemaAnnotator"/>
    <!-- highlight errors in parents even if there are errors in children -->
    <highlightRangeExtension
        implementation="ws.epigraph.ideaplugin.edl.highlighting.SchemaHighlightRangeExtension"/>

    <!-- highlighting filters -->
    <problemFileHighlightFilter
        implementation="ws.epigraph.ideaplugin.edl.highlighting.SchemaProblemFileHighlightFilter"/>
    <problemHighlightFilter
        implementation="ws.epigraph.ideaplugin.edl.highlighting.SchemaProblemHighlightFilter"/>

    <!-- refactoring -->
    <lang.refactoringSupport language="epigraph_schema"
                             implementationClass="ws.epigraph.ideaplugin.edl.features.SchemaRefactoringSupportProvider"/>
    <renamePsiElementProcessor
        implementation="ws.epigraph.ideaplugin.edl.features.rename.RenameSchemaFieldProcessor"/>

    <!-- imports optimizer -->
    <autoImportOptionsProvider
        instance="ws.epigraph.ideaplugin.edl.options.SchemaAutoImportOptionsProvider"/>
    <lang.importOptimizer language="epigraph_schema"
                          implementationClass="ws.epigraph.ideaplugin.edl.features.imports.SchemaImportOptimizer"/>

    <!-- line painter for default tags on -->
    <editor.linePainter implementation="ws.epigraph.ideaplugin.edl.features.linepainter.SchemaDefaultTagLinePainter"/>

    <!-- inspections -->
    <!-- imports -->
    <localInspection
        language="epigraph_schema"
        shortName="DuplicateImport"
        displayName="Duplicate imports"
        groupPath="Epigraph, Schema"
        groupName="Imports"
        enabledByDefault="true"
        level="WARNING"
        implementationClass="ws.epigraph.ideaplugin.edl.features.inspections.DuplicateImportInspection"/>
    <localInspection
        language="epigraph_schema"
        shortName="UnnecessaryImport"
        displayName="Unnecessary imports"
        groupPath="Epigraph, Schema"
        groupName="Imports"
        enabledByDefault="true"
        level="WARNING"
        implementationClass="ws.epigraph.ideaplugin.edl.features.inspections.UnnecessaryImportInspection"/>
    <localInspection
        language="epigraph_schema"
        shortName="UnusedImport"
        displayName="Unused imports"
        groupPath="Epigraph, Schema"
        groupName="Imports"
        enabledByDefault="true"
        level="WARNING"
        implementationClass="ws.epigraph.ideaplugin.edl.features.inspections.UnusedImportInspection"/>
    <localInspection
        language="epigraph_schema"
        shortName="ConflictingImport"
        displayName="Conflicting imports"
        groupPath="Epigraph, Schema"
        groupName="Imports"
        enabledByDefault="true"
        level="ERROR"
        implementationClass="ws.epigraph.ideaplugin.edl.features.inspections.ConflictingImportInspection"/>

    <!-- services -->
    <applicationService serviceImplementation="ws.epigraph.ideaplugin.edl.options.SchemaSettings"/>

    <!-- intentions -->
    <intentionAction>
      <category>Epigraph/Schema</category>
      <className>ws.epigraph.ideaplugin.edl.features.actions.fixes.AddDefaultAction</className>
    </intentionAction>
  </extensions>

  <actions>
    <action class="ws.epigraph.ideaplugin.edl.features.actions.CreateSchemaFileAction"
            id="Epigraph.NewSchemaFile"
            text="Epigraph Schema" description="Create new Epigraph schema file">
      <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
    </action>
  </actions>

  <project-components>
    <component>
      <implementation-class>
        ws.epigraph.ideaplugin.edl.brains.hierarchy.HierarchyCache
      </implementation-class>
    </component>
    <component>
      <implementation-class>
        ws.epigraph.ideaplugin.edl.brains.NamespaceManager
      </implementation-class>
    </component>
  </project-components>

</idea-plugin>