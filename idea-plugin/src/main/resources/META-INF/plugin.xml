<idea-plugin version="2">
  <id>com.sumologic.epigraph.ideaplugin.schema</id>
  <name>Epigraph</name>
  <version>1.0</version>
  <vendor email="support@sumologic.com" url="http://www.sumologic.com">Sumo Logic</vendor>

  <description><![CDATA[
      Epigraph framework support
    ]]></description>

  <change-notes><![CDATA[
      Initial release.
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to source different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <actions>
    <action class="com.sumologic.epigraph.ideaplugin.schema.actions.CreateSchemaFileAction" id="Epigraph.NewSchemaFile"
            text="Epigraph Schema" description="Create new Epigraph schema file">
      <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
    </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.sumologic.epigraph.ideaplugin.schema.SchemaFileTypeFactory"/>
    <internalFileTemplate name="Epigraph Schema"/>
    <stubElementTypeHolder class="com.sumologic.epigraph.schema.parser.psi.stubs.SchemaStubElementTypes"/>

    <stubIndex implementation="com.sumologic.epigraph.ideaplugin.schema.index.SchemaShortTypeNameIndex"/>
    <stubIndex implementation="com.sumologic.epigraph.ideaplugin.schema.index.SchemaFullTypeNameIndex"/>
    <stubIndex implementation="com.sumologic.epigraph.ideaplugin.schema.index.SchemaTypesByNamespaceIndex"/>
    <stubIndex implementation="com.sumologic.epigraph.ideaplugin.schema.index.SchemaNamespaceByNameIndex"/>
    <stubIndex implementation="com.sumologic.epigraph.ideaplugin.schema.index.SchemaSupplementBySourceIndex"/>
    <stubIndex implementation="com.sumologic.epigraph.ideaplugin.schema.index.SchemaSupplementBySupplementedIndex"/>

    <lang.syntaxHighlighterFactory language="epi_schema"
                                   implementationClass="com.sumologic.epigraph.ideaplugin.schema.highlighting.SchemaSyntaxHighlighterFactory"/>
    <lang.parserDefinition language="epi_schema"
                           implementationClass="com.sumologic.epigraph.schema.parser.SchemaParserDefinition"/>
    <annotator language="epi_schema"
               implementationClass="com.sumologic.epigraph.ideaplugin.schema.highlighting.SchemaAnnotator"/>

    <completion.contributor language="epi_schema"
                            implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.completion.SchemaCompletionContributor"/>
    <!--<psi.referenceContributor language="epi_schema"-->
    <!--implementation="com.sumologic.dohyo.plugin.schema.psi.references.SchemaTypeReferenceContributor"/>-->

    <lang.formatter language="epi_schema"
                    implementationClass="com.sumologic.epigraph.ideaplugin.schema.formatting.SchemaFormattingModelBuilder"/>
    <langCodeStyleSettingsProvider
        implementation="com.sumologic.epigraph.ideaplugin.schema.formatting.codeStyle.SchemaLanguageCodeStyleSettingsProvider"/>
    <codeStyleSettingsProvider
        implementation="com.sumologic.epigraph.ideaplugin.schema.formatting.codeStyle.SchemaCodeStyleSettingsProvider"/>

    <lang.findUsagesProvider language="epi_schema"
                             implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.usages.SchemaFindUsagesProvider"/>
    <elementDescriptionProvider
        implementation="com.sumologic.epigraph.ideaplugin.schema.features.usages.SchemaElementDescriptionProvider"/>
    <usageTypeProvider
        implementation="com.sumologic.epigraph.ideaplugin.schema.features.usages.SchemaUsageTypeProvider"/>

    <lang.refactoringSupport language="epi_schema"
                             implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.SchemaRefactoringSupportProvider"/>
    <lang.namesValidator language="epi_schema"
                         implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.SchemaNamesValidator"/>

    <lang.braceMatcher language="epi_schema"
                       implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.SchemaBraceMatcher"/>
    <lang.foldingBuilder language="epi_schema"
                         implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.SchemaFoldingBuilder"/>
    <lang.commenter language="epi_schema"
                    implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.SchemaCommenter"/>
    <lang.psiStructureViewFactory language="epi_schema"
                                  implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.structureview.SchemaStructureViewFactory"/>
    <statementUpDownMover implementation="com.sumologic.epigraph.ideaplugin.schema.features.SchemaLineMover"/>
    <quoteHandler fileType="epi_schema"
                  className="com.sumologic.epigraph.ideaplugin.schema.features.SchemaQuoteHandler"/>
    <gotoClassContributor
        implementation="com.sumologic.epigraph.ideaplugin.schema.features.navigation.GotoTypeContributor"/>
    <codeInsight.lineMarkerProvider
        language="epi_schema"
        implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.hierarchy.SchemaLineMarkerProvider"/>

    <typeHierarchyProvider language="epi_schema"
                           implementationClass="com.sumologic.epigraph.ideaplugin.schema.features.hierarchy.SchemaHierarchyProvider"/>

    <!-- todo import optimizer -->

  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <project-components>
    <component>
      <implementation-class>
        com.sumologic.epigraph.ideaplugin.schema.brains.hierarchy.HierarchyCache
      </implementation-class>
    </component>
    <component>
      <implementation-class>
        com.sumologic.epigraph.ideaplugin.schema.brains.NamespaceManager
      </implementation-class>
    </component>
  </project-components>

</idea-plugin>