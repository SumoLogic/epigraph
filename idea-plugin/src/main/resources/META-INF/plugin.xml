<idea-plugin version="2">
  <id>ws.epigraph.ideaplugin.edl</id>
  <name>Epigraph</name>
  <version>1.0</version>
  <vendor email="support@sumologic.com" url="http://www.sumologic.com">Sumo Logic</vendor>

  <description><![CDATA[
      Epigraph framework support
    ]]></description>

  <depends optional="true" config-file="plugin-uml.xml">com.intellij.diagram</depends>

  <change-notes><![CDATA[
      Initial release.
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <!--<idea-version since-build="145.0"/>-->
  <!-- This gets automatically inserted by the intellij gradle plugin based on version number from gradle.properties -->

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to source different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="ws.epigraph.ideaplugin.schema.EdlFileTypeFactory"/>
    <internalFileTemplate name="Epigraph EDL"/>
    <stubElementTypeHolder class="ws.epigraph.schema.parser.psi.stubs.EdlStubElementTypes"/>

    <!-- indices -->
    <stubIndex implementation="ws.epigraph.ideaplugin.schema.index.EdlShortTypeNameIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.schema.index.EdlFullTypeNameIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.schema.index.EdlTypesByNamespaceIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.schema.index.EdlNamespaceByNameIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.schema.index.EdlSupplementBySourceIndex"/>
    <stubIndex implementation="ws.epigraph.ideaplugin.schema.index.EdlSupplementBySupplementedIndex"/>

    <!-- remove file extension in editor tabs -->
    <editorTabTitleProvider
        implementation="ws.epigraph.ideaplugin.schema.presentation.EdlEditorTabTitleProvider"/>

    <!-- change icon if schema file is not under the source root -->
    <fileIconPatcher implementation="ws.epigraph.ideaplugin.schema.presentation.EdlFileIconPatcher"/>

    <lang.syntaxHighlighterFactory language="epigraph_edl"
                                   implementationClass="ws.epigraph.ideaplugin.schema.highlighting.EdlSyntaxHighlighterFactory"/>
    <lang.parserDefinition language="epigraph_edl"
                           implementationClass="ws.epigraph.schema.parser.EdlParserDefinition"/>

    <completion.contributor language="epigraph_edl"
                            implementationClass="ws.epigraph.ideaplugin.schema.features.completion.EdlCompletionContributor"/>

    <lang.formatter language="epigraph_edl"
                    implementationClass="ws.epigraph.ideaplugin.schema.formatting.EdlFormattingModelBuilder"/>
    <langCodeStyleSettingsProvider
        implementation="ws.epigraph.ideaplugin.schema.formatting.codeStyle.EdlLanguageCodeStyleSettingsProvider"/>
    <codeStyleSettingsProvider
        implementation="ws.epigraph.ideaplugin.schema.formatting.codeStyle.EdlCodeStyleSettingsProvider"/>

    <lang.findUsagesProvider language="epigraph_edl"
                             implementationClass="ws.epigraph.ideaplugin.schema.features.usages.EdlFindUsagesProvider"/>
    <elementDescriptionProvider
        implementation="ws.epigraph.ideaplugin.schema.features.usages.EdlElementDescriptionProvider"/>
    <usageTypeProvider
        implementation="ws.epigraph.ideaplugin.schema.features.usages.EdlUsageTypeProvider"/>

    <lang.namesValidator language="epigraph_edl"
                         implementationClass="ws.epigraph.ideaplugin.schema.features.EdlNamesValidator"/>

    <lang.braceMatcher language="epigraph_edl"
                       implementationClass="ws.epigraph.ideaplugin.schema.features.EdlBraceMatcher"/>
    <lang.foldingBuilder language="epigraph_edl"
                         implementationClass="ws.epigraph.ideaplugin.schema.features.EdlFoldingBuilder"/>
    <lang.commenter language="epigraph_edl"
                    implementationClass="ws.epigraph.ideaplugin.schema.features.EdlCommenter"/>
    <lang.psiStructureViewFactory language="epigraph_edl"
                                  implementationClass="ws.epigraph.ideaplugin.schema.features.structureview.EdlStructureViewFactory"/>
    <statementUpDownMover implementation="ws.epigraph.ideaplugin.schema.features.EdlLineMover"/>
    <quoteHandler fileType="epigraph_edl"
                  className="ws.epigraph.ideaplugin.schema.features.EdlQuoteHandler"/>
    <gotoClassContributor
        implementation="ws.epigraph.ideaplugin.schema.features.navigation.GotoTypeContributor"/>
    <!--TODO <gotoSymbolContributor implementation=""-->
    <codeInsight.lineMarkerProvider
        language="epigraph_edl"
        implementationClass="ws.epigraph.ideaplugin.schema.features.hierarchy.EdlLineMarkerProvider"/>

    <typeHierarchyProvider language="epigraph_edl"
                           implementationClass="ws.epigraph.ideaplugin.schema.features.hierarchy.EdlHierarchyProvider"/>


    <!-- annotator -->
    <annotator language="epigraph_edl"
               implementationClass="ws.epigraph.ideaplugin.schema.highlighting.EdlAnnotator"/>
    <annotator language="epigraph_edl"
               implementationClass="ws.epigraph.ideaplugin.schema.highlighting.EdlOpOutputProjectionsAnnotator"/>
    <!-- highlight errors in parents even if there are errors in children -->
    <highlightRangeExtension
        implementation="ws.epigraph.ideaplugin.schema.highlighting.EdlHighlightRangeExtension"/>

    <!-- highlighting filters -->
    <problemFileHighlightFilter
        implementation="ws.epigraph.ideaplugin.schema.highlighting.EdlProblemFileHighlightFilter"/>
    <problemHighlightFilter
        implementation="ws.epigraph.ideaplugin.schema.highlighting.EdlProblemHighlightFilter"/>

    <!-- refactoring -->
    <lang.refactoringSupport language="epigraph_edl"
                             implementationClass="ws.epigraph.ideaplugin.schema.features.EdlRefactoringSupportProvider"/>
    <renamePsiElementProcessor
        implementation="ws.epigraph.ideaplugin.schema.features.rename.RenameEdlFieldProcessor"/>

    <!-- imports optimizer -->
    <autoImportOptionsProvider
        instance="ws.epigraph.ideaplugin.schema.options.EdlAutoImportOptionsProvider"/>
    <lang.importOptimizer language="epigraph_edl"
                          implementationClass="ws.epigraph.ideaplugin.schema.features.imports.EdlImportOptimizer"/>

    <!-- line painter for default tags on -->
    <editor.linePainter implementation="ws.epigraph.ideaplugin.schema.features.linepainter.EdlDefaultTagLinePainter"/>

    <!-- inspections -->
    <!-- imports -->
    <localInspection
        language="epigraph_edl"
        shortName="DuplicateImport"
        displayName="Duplicate imports"
        groupPath="Epigraph, EDL"
        groupName="Imports"
        enabledByDefault="true"
        level="WARNING"
        implementationClass="ws.epigraph.ideaplugin.schema.features.inspections.DuplicateImportInspection"/>
    <localInspection
        language="epigraph_edl"
        shortName="UnnecessaryImport"
        displayName="Unnecessary imports"
        groupPath="Epigraph, EDL"
        groupName="Imports"
        enabledByDefault="true"
        level="WARNING"
        implementationClass="ws.epigraph.ideaplugin.schema.features.inspections.UnnecessaryImportInspection"/>
    <localInspection
        language="epigraph_edl"
        shortName="UnusedImport"
        displayName="Unused imports"
        groupPath="Epigraph, EDL"
        groupName="Imports"
        enabledByDefault="true"
        level="WARNING"
        implementationClass="ws.epigraph.ideaplugin.schema.features.inspections.UnusedImportInspection"/>
    <localInspection
        language="epigraph_edl"
        shortName="ConflictingImport"
        displayName="Conflicting imports"
        groupPath="Epigraph, EDL"
        groupName="Imports"
        enabledByDefault="true"
        level="ERROR"
        implementationClass="ws.epigraph.ideaplugin.schema.features.inspections.ConflictingImportInspection"/>

    <!-- services -->
    <applicationService serviceImplementation="ws.epigraph.ideaplugin.schema.options.EdlSettings"/>

    <!-- intentions -->
    <intentionAction>
      <category>Epigraph/Edl</category>
      <className>ws.epigraph.ideaplugin.schema.features.actions.fixes.AddDefaultAction</className>
    </intentionAction>
  </extensions>

  <actions>
    <action class="ws.epigraph.ideaplugin.schema.features.actions.CreateEdlFileAction"
            id="Epigraph.NewEdlFile"
            text="Epigraph EDL" description="Create new Epigraph Declarations file">
      <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
    </action>
  </actions>

  <project-components>
    <component>
      <implementation-class>
        ws.epigraph.ideaplugin.schema.brains.hierarchy.HierarchyCache
      </implementation-class>
    </component>
    <component>
      <implementation-class>
        ws.epigraph.ideaplugin.schema.brains.NamespaceManager
      </implementation-class>
    </component>
  </project-components>

</idea-plugin>