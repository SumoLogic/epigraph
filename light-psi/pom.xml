<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>epigraph-light-psi</artifactId>
  <version>0.0.0</version><!-- own release cycle -->

  <parent>
    <groupId>ws.epigraph</groupId>
    <artifactId>epigraph</artifactId>
    <version>0.0.2-SNAPSHOT</version>
  </parent>

  <build>

    <plugins>

      <plugin>
        <groupId>ws.epigraph</groupId>
        <artifactId>jar-mavenizer-plugin</artifactId>
        <version>0.0.2-SNAPSHOT</version>
        <executions>
          <execution>
            <configuration>
              <sourceJar>${project.basedir}/resources/light-psi-prebuilt.jar</sourceJar>
              <!-- <sourceJar>${project.basedir}/../schema-parser/lib/light-psi-all.jar</sourceJar> --> <!-- in case above is broken -->
            </configuration>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>

</project>
