  <modelVersion>4.0.0</modelVersion>

  <artifactId>epigraph-scala-codegen</artifactId>

  <parent>
    <groupId>ws.epigraph</groupId>
    <artifactId>epigraph-scala</artifactId>
    <version>0.0.6-SNAPSHOT</version>
