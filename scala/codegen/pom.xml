    <dependency>
      <groupId>org.scalameta</groupId>
      <artifactId>trees_${scala.compat.version}</artifactId>
    </dependency>

    <dependency>
      <groupId>org.scalatest</groupId>
      <artifactId>scalatest_${scala.compat.version}</artifactId>
