namespace io.epigraph.tests

vartype Person {
  id: PersonId
  `record`: PersonRecord
}

integer PersonId

record PersonRecord {
  avroType = "Person"
  id: PersonId { avroField = "personId" }
  firstName: String
  lastName: String
  bestFriend: Person // default id
  worstEnemy: PersonRecord
  friends: list[Person]
  friendsMap: map[String, Person]
}
