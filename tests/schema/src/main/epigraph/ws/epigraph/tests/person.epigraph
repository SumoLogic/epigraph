namespace ws.epigraph.tests

entity Person {
  id: PersonId
  `record`: PersonRecord
}

integer PersonId

record PersonRecord {
  //avroType = "Person"
  //dbTable = "T_PERSONS"
  id: PersonId { /*avroField = "personId", dbColumn = "ID", dbType = "BIGINT"*/ }
  firstName: String
  lastName: String
  middleName: String
  bestFriend: Person
  bestFriend2: Person
  bestFriend3: Person
  worstEnemy: PersonRecord
  friends: list[Person]
  friendRecords: list[PersonRecord]
  friendsMap: map[String, Person]
  friendRecordMap: map[String, PersonRecord]
  personRecToPersonRec: map[PersonRecord, PersonRecord]
}

record PaginationInfo {
  start: Long
  count: Long
}

map[PersonId, Person] PersonMap meta PaginationInfo
