<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>tests-schema</artifactId>
  <packaging>epigraph-schema</packaging>

  <parent>
    <groupId>com.sumologic.epigraph.tests</groupId>
    <artifactId>tests</artifactId>
    <version>0.0-SNAPSHOT</version>
  </parent>

  <dependencies>

    <!-- main dependencies -->

    <dependency>
      <groupId>com.sumologic.epigraph</groupId>
      <artifactId>epigraph-builtin-types-schema</artifactId>
      <version>0.0-SNAPSHOT</version>
      <type>epigraph-schema</type>
    </dependency>

    <!-- test dependencies -->

    <dependency>
      <groupId>com.sumologic.epigraph</groupId>
      <artifactId>epigraph-builtin-types-schema</artifactId>
      <version>0.0-SNAPSHOT</version>
      <type>epigraph-schema</type>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>

    <sourceDirectory>${project.basedir}/src/main/epigraph</sourceDirectory>
    <testSourceDirectory>${project.basedir}/src/test/epigraph</testSourceDirectory>

    <plugins>

      <plugin>
        <groupId>com.sumologic.epigraph</groupId>
        <artifactId>epigraph-maven-plugin</artifactId>
      </plugin>

    </plugins>

  </build>

</project>
