<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>users-schema-scala</artifactId>

  <parent>
    <groupId>com.example.epigraph</groupId>
    <artifactId>users-example</artifactId>
    <version>0.0-SNAPSHOT</version>
  </parent>

  <dependencies>

    <!-- main dependencies -->

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>users-schema</artifactId>
      <version>${project.version}</version>
      <type>epigraph-schema</type>
    </dependency>

    <dependency>
      <groupId>com.sumologic.epigraph</groupId>
      <artifactId>epigraph-core</artifactId>
      <version>0.0-SNAPSHOT</version>
    </dependency>

    <!-- test dependencies -->

    <dependency>
      <groupId>com.sumologic.epigraph</groupId>
      <artifactId>epigraph-builtin-types</artifactId>
      <version>0.0-SNAPSHOT</version>
      <type>epigraph-schema</type>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>

    <plugins>

      <plugin>
        <groupId>com.sumologic.epigraph</groupId>
        <artifactId>epigraph-maven-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>com.sumologic.epigraph</groupId>
        <artifactId>epigraph-scala-maven-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
      </plugin>

    </plugins>

  </build>

</project>
